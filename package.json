{
  "name": "bahnhofs-abfahrten",
  "version": "0.0.2",
  "description": "",
  "license": "MIT",
  "engines": {
    "node": "^14.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engineStrict": true,
  "scripts": {
    "all:clean": "yarn workspaces foreach -pt run build:clean",
    "all:build": "yarn workspaces foreach -p run build",
    "all:lint": "yarn workspaces foreach -pt run lint",
    "build:clean": "rimraf dist && mkdir dist",
    "build:client": "node scripts/buildClient",
    "build:client:ci": "node scripts/buildClient sendStats",
    "build": "yarn build:client",
    "dev": "node devIndex.js",
    "lint": "run-p lint:eslint lint:prettier",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx scripts cypress",
    "lint:prettier": "prettier -c packages/ scripts/ cypress/",
    "test": "run-p all:lint test:jest test:ts",
    "test:jest": "jest",
    "test:ts": "run-p test:ts:main test:ts:cypress",
    "test:ts:main": "tsc",
    "test:ts:cypress": "tsc -p cypress",
    "e2e:local": "cypress open",
    "e2e:ci": "cypress run",
    "doc:start": "./startDocServer.sh",
    "doc:build": "yarn workspace server run doc:build",
    "doc:build:gitadd": "yarn doc:build && git add public/swagger.json && git add packages/server/API/routes.ts",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "run-s doc:build:gitadd lint-staged"
    }
  },
  "lint-staged": {
    "*.{t,j,cj,mj}s?(x)": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-transform-react-constant-elements": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/register": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@cypress/webpack-preprocessor": "^5.5.0",
    "@loadable/babel-plugin": "^5.13.2",
    "@loadable/webpack-plugin": "^5.14.0",
    "@packtracker/webpack-plugin": "^2.3.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@sentry/cli": "^1.61.0",
    "@sentry/webpack-plugin": "^1.14.0",
    "@testing-library/cypress": "7.0.3",
    "@types/compression-webpack-plugin": "^6.0.4",
    "@types/jest": "^26.0.20",
    "@types/rimraf": "^3.0.0",
    "@types/terser-webpack-plugin": "^5.0.2",
    "@types/webpack": "^4.41.26",
    "@types/webpack-bundle-analyzer": "3.9.0",
    "@types/webpack-hot-middleware": "2.25.3",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-const-enum": "^1.0.1",
    "babel-plugin-jsx-remove-data-test-id": "2.1.3",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "cache-loader": "^4.1.0",
    "chokidar": "^3.5.1",
    "compression-webpack-plugin": "^7.1.2",
    "css-loader": "^5.0.1",
    "cypress": "^6.3.0",
    "eslint": "^7.18.0",
    "eslint-config-marudor": "^7.3.3",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "file-loader": "^6.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.3",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react-refresh": "^0.9.0",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "typescript": "4.2.3",
    "url-loader": "^4.1.1",
    "wait-for": "^2.1.1",
    "webpack": "^5.17.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.4.0",
    "webpack-hot-middleware": "^2.25.0",
    "workbox-webpack-plugin": "^6.0.2"
  },
  "dependencies": {
    "client": "workspace:*",
    "core-js": "^3.8.3",
    "server": "workspace:*"
  },
  "resolutions": {
    "iconv-lite": "^0.5.1",
    "node-fetch": "^2",
    "ejs": "^3",
    "lodash": "^4.17.15",
    "chokidar": "^3",
    "lru-cache": "^6",
    "ws": "^7",
    "typescript": "^4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marudor/BahnhofsAbfahrten.git"
  },
  "author": "marudor",
  "bugs": {
    "url": "https://github.com/marudor/BahnhofsAbfahrten/issues"
  },
  "keywords": [],
  "contributors": [],
  "homepage": "http://marudor.de",
  "jest-junit": {
    "output": "./reports/junitresults.xml"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-leading-blank": [
        0
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  }
}
